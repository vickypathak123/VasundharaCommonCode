<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Matisse.Zhihu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="toolbar">@style/Toolbar.Zhihu</item>
        <item name="album.dropdown.title.color">@color/album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">@color/album_dropdown_thumbnail_placeholder</item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">@color/album_empty_view</item>
        <item name="item.placeholder">@color/item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">@color/colorPrimary</item>
        <item name="item.checkCircle.borderColor">@color/item_checkCircle_borderColor</item>
        <item name="page.bg">@color/page_bg</item>
        <item name="bottomToolbar.bg">@color/bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.textColor">@color/gallery_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.textColor">@color/colorPrimary</item>
        <item name="preview.bottomToolbar.back.textColor">@color/preview_bottom_toolbar_back_text</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/preview_bottom_toolbar_back_text</item>
        <item name="listPopupWindowStyle">@style/Popup.Zhihu</item>
        <item name="capture.textColor">@color/capture</item>
    </style>

    <style name="Toolbar.Zhihu" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Popup.Zhihu" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/album_popup_bg</item>
    </style>


    <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="Popup.Dracula" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@color/dracula_album_popup_bg</item>
    </style>

</resources>